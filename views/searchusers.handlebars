<h1>Search users</h1>
{{#if error}}
<span>{{error}}</span>
{{/if}}
<form action="/users/search" class="form-inline" method="POST">
  <div class="form-group">
    <input type="text" name="id" placeholder="Search users by id" class="form-control">
  </div>
  <input type="submit" value="Search" class="btn btn-primary">
</form>
